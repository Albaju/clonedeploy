PORTNAME=	clonedeploy
PORTVERSION=	1.0.1
CATEGORIES=	www
MASTER_SITES=	SF/${PORTNAME}/

MAINTAINER=	crucibleadmin@cruciblewds.org
COMMENT=	Web based computer cloning solution

#USE_APACHE_RUN=	22

CLONEDEPLOY_USERNAME?=	www
CLONEDEPLOY_GROUPNAME?=	${CLONEDEPLOY_USERNAME}

WRKSRC=		${WRKDIR}/${PORTNAME}
NO_BUILD=	yes
PLIST_SUB=	CLONEDEPLOY_USERNAME=${CLONEDEPLOY_USERNAME} \
		CLONEDEPLOY_GROUPNAME=${CLONEDEPLOY_GROUPNAME}

do-install:
	@${MKDIR} -m 0755 ${STAGEDIR}${WWWDIR}
	@cd ${WRKSRC} && ${COPYTREE_SHARE} . ${STAGEDIR}${WWWDIR}

.include <bsd.port.mk>
